<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".SearchActivity">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/constraintGuidelineID"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.26"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/constraintGuidelineID"
        android:background="@color/red"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <ImageView
        android:translationX="400dp"
        android:translationY="10dp"
        android:src="@drawable/ic_notify"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <TextView
        android:translationX="53dp"
        android:translationY="50dp"
        android:id="@+id/tvUserName_ID"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="Null"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:translationX="53dp"
        android:translationY="80dp"
        android:textSize="30sp"
        android:text="Book a bus ticket"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/white"
        android:layout_width="wrap_content"/>
    <LinearLayout
        app:layout_constraintTop_toTopOf="@id/constraintGuidelineID"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#EBEBEB"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:background="@drawable/shape_from_to"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/constraintGuidelineID"
        app:layout_constraintBottom_toBottomOf="@id/constraintGuidelineID"
        android:layout_width="350dp"
        android:layout_height="85dp">
        <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@drawable/shape_search_dir"
                android:layout_margin="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:padding="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_direction"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="bottom"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textSize="21sp"
                    android:textColor="#7E000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Spinner
                    android:id="@+id/spinnerFromID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:translationY="93dp"
        android:background="@drawable/shape_from_to"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/constraintGuidelineID"
        app:layout_constraintBottom_toBottomOf="@id/constraintGuidelineID"
        android:layout_width="350dp"
        android:layout_height="85dp">
        <!-- Add your content here -->
        <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@drawable/shape_search_loc"
                android:layout_margin="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:padding="11dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_direction" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="bottom"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textSize="21sp"
                    android:textColor="#7E000000" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Spinner
                    android:id="@+id/spinnerToID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:rotation="90"
        android:padding="12dp"
        android:background="@drawable/shape_search_trans"
        android:translationY="45dp"
        android:translationX="125dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/constraintGuidelineID"
        app:layout_constraintBottom_toBottomOf="@id/constraintGuidelineID"
        android:src="@drawable/ic_transfer"
        android:layout_width="60dp"
        android:layout_height="60dp"/>
    <LinearLayout
        android:weightSum="3"
        android:orientation="vertical"
        android:translationY="350dp"
        android:background="@drawable/shape_from_to"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/constraintGuidelineID"
        app:layout_constraintBottom_toBottomOf="@id/constraintGuidelineID"
        android:layout_width="350dp"
        android:layout_height="380dp">
        <LinearLayout
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1.1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:background="@drawable/shape_member"
                    android:layout_margin="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <ImageView
                        android:padding="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_member" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_weight="0.8"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="bottom"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Passengers"
                        android:textSize="21sp"
                        android:textColor="#7E000000"
                        android:textStyle="bold"
                        android:textAllCaps="false" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center|top|left"
                    android:orientation="horizontal"
                    android:paddingTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/imgBtn_plusID"
                        android:background="@color/white"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_plus"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />
                    <TextView
                        android:id="@+id/tv_passengersID"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:textSize="19sp"
                        android:gravity="center"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="0"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />
                    <ImageButton
                        android:id="@+id/imgBtn_minusID"
                        android:background="@color/white"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_minus"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:orientation="vertical"
                android:layout_weight="1.1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="bottom"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:textSize="21sp"
                        android:textColor="#7E000000" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Spinner
                        android:id="@+id/spinner_busTypeID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1.45"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:background="@drawable/shape_search_dir"
                    android:layout_width="67dp"
                    android:layout_height="67dp">
                    <ImageView
                        android:id="@+id/datePickerID"
                        android:padding="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_calendar"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_weight="0.55"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="bottom"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Departure"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:textSize="21sp"
                        android:textColor="#7E000000" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="top"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tvDateTravelID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pick Travel Date"
                        android:textAllCaps="false"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_findRideID"
                android:background="@drawable/sign_in_up_shape"
                app:backgroundTint="@color/red"
                android:text="Find Bus"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_width="322dp"
                android:layout_height="60dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>